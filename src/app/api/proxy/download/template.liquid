<style>
  :root {
    --shadow-color: 0 0 63%;
    --shadow-elevation-low: 0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.34)
    , 0.4px 0.8px 1px -1.2px hsl(var(--shadow-color) / 0.34)
    , 1px 2px 2.5px -2.5px hsl(var(--shadow-color) / 0.34);
    --shadow-elevation-medium: 0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.36)
    , 0.8px 1.6px 2px -0.8px hsl(var(--shadow-color) / 0.36)
    , 2.1px 4.1px 5.2px -1.7px hsl(var(--shadow-color) / 0.36)
    , 5px 10px 12.6px -2.5px hsl(var(--shadow-color) / 0.36);
    --shadow-elevation-high: 0.3px 0.5px 0.7px hsl(var(--shadow-color) / 0.34)
    , 1.5px 2.9px 3.7px -0.4px hsl(var(--shadow-color) / 0.34)
    , 2.7px 5.4px 6.8px -0.7px hsl(var(--shadow-color) / 0.34)
    , 4.5px 8.9px 11.2px -1.1px hsl(var(--shadow-color) / 0.34)
    , 7.1px 14.3px 18px -1.4px hsl(var(--shadow-color) / 0.34)
    , 11.2px 22.3px 28.1px -1.8px hsl(var(--shadow-color) / 0.34)
    , 17px 33.9px 42.7px -2.1px hsl(var(--shadow-color) / 0.34)
    , 25px 50px 62.9px -2.5px hsl(var(--shadow-color) / 0.34);
  }
  #filejar-downloads {
    padding: 20px;
    max-width: 850px;
    margin: 0 auto;
  }
  #filejar-downloads .card {
    background-color: #fff;
    border-radius: 8px;
    box-shadow: var(--shadow-elevation-low);
    padding: 20px;
    margin-bottom: 20px;
    color: #000;
  }
  .order-id {
    font-size: 22px;
    font-weight: 600;
    color: #333;
    text-transform: uppercase;
    margin-bottom: 0;
  }
  .standard-text {
    font-size: 16px;
    margin-bottom: 5px;
  }
  .order-details {
    color: #555;
    font-size: 16px;
    margin: 0 0 10px;
  }
  .products {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
  }
  .product {
    margin: 15px 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 10px;
  }
  .product * {
    margin: 0;
  }
  .product-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 8px;
  }
  .product-name {
    font-size: 18px;
    font-weight: 600;
    color: #333;
  }
  .product-files {
    font-size: 16px;
    color: #555;
  }
  .product-details {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .product-header {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
  }
  .product-file {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 10px;
    margin-bottom: 10px;
  }
  .product-file-details {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .product-file-name {
    font-size: 18px;
    flex-wrap: wrap;
  }
  .download-button {
    font-size: 16px;
    color: #555;
    text-decoration: none;
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
  }
  .product-file-size {
    font-size: 14px;
    color: #555;
  }
  .powered-by {
    font-size: 14px;
    color: #555;
    margin: 20px;
    text-align: center;
  }
  .powered-by a {
    text-decoration: none;
  }
</style>
<script
  async
  defer
  src="##app_url##/proxy.js?shop={{ request.host }}"></script>
<div id="filejar-downloads">
  <div class="card">
    <p class="order-id">ORDER ###order_name##</p>
    <p class="order-details">##customer_email## · ##customer_name## · ##order_date##</p>
    <p class="standard-text">Thank you for purchasing from our store!</p>
    <p class="standard-text">Please use the buttons below to download your files.</p>
    <div class="products">
      ##products##
    </div>
  </div>
</div>
<p class="powered-by">Powered by
  <a href="https://filejar.com" target="_blank">FileJar</a>
</p>